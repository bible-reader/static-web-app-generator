{
  "name": "static-web-app-generator",
  "homepage": "https://biblereader.app",
  "repository": {
    "type": "git",
    "url": "https://github.com/bible-reader/static-web-app-generator.git"
  },
  "version": "0.2.0",
  "private": true,
  "scripts": {
    "start": "react-scripts-ts start",
    "build": "react-scripts-ts build",
    "test": "react-scripts-ts test --env=jsdom",
    "eject": "react-scripts-ts eject",
    "clean": "rimraf public/bibles && rimraf src/initialDataGenerated.ts",
    "generate": "yarn run clean && ts-node --project src/tools src/tools/generate.ts",
    "deploy": "gh-pages -d build -r git@github.com:bible-reader/bible-reader.github.io.git -b master",
    "postinstall": "yarn run generate"
  },
  "dependencies": {
    "@bible-reader/common": "^0.7.0",
    "@bible-reader/reference-validator": "^0.8.0",
    "@types/classnames": "^2.2.4",
    "@types/react-responsive": "^3.0.2",
    "@types/react-swipe": "^5.0.3",
    "classnames": "^2.2.6",
    "downshift": "^1.31.2",
    "react": "^16.2.0",
    "react-custom-scrollbars": "^4.2.1",
    "react-dom": "^16.2.0",
    "react-responsive": "^5.0.0",
    "react-swipe": "^5.1.1",
    "swipe-js-iso": "^2.0.4",
    "typestyle": "^1.3.4"
  },
  "devDependencies": {
    "@bible-reader/bible-converter": "^0.8.0",
    "@bible-reader/types": "^0.8.0",
    "@types/adm-zip": "^0.4.31",
    "@types/jest": "^21.1.8",
    "@types/mz": "^0.0.31",
    "@types/node": "^8.5.1",
    "@types/node-fetch": "^1.6.7",
    "@types/react": "^16.0.31",
    "@types/react-custom-scrollbars": "^4.0.1",
    "@types/react-dom": "^16.0.3",
    "adm-zip": "^0.4.7",
    "gh-pages": "^1.1.0",
    "mz": "^2.7.0",
    "node-fetch": "^1.7.3",
    "prettier": "^1.9.2",
    "react-scripts-ts": "^2.17.0",
    "ts-node": "^4.0.2",
    "tslint-config-prettier": "^1.6.0",
    "typescript": "^3.0.3"
  }
}
